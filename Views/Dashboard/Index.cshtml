@{
    Layout = "_Layout";
}
@model IEnumerable<ElearningPlatform.Models.DashboardViewModel>

<h1 class="page-title">
    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
</h1>

<div class="row mb-4">
    <div class="col-12">
        <a href="/Courses" class="btn btn-lg btn-primary shadow-sm">
            <i class="fas fa-book-open me-2"></i>Voir tous les cours
        </a>
    </div>
</div>

@if(Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach(var x in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0" style="border-radius: 15px; transition: transform 0.3s ease;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="card-title mb-0 fw-bold text-dark">
                                <i class="fas fa-book text-primary me-2"></i>@x.Title
                            </h5>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted small">Progression</span>
                                <span class="fw-bold text-primary">@x.Percent%</span>
                            </div>
                            <div class="progress" style="height: 12px; border-radius: 10px;">
                                <div class="progress-bar progress-bar-striped progress-bar-animated 
                                    @(x.Percent >= 100 ? "bg-success" : x.Percent >= 50 ? "bg-info" : "bg-warning")" 
                                    role="progressbar" 
                                    style="width: @x.Percent%" 
                                    aria-valuenow="@x.Percent" 
                                    aria-valuemin="0" 
                                    aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                        @if(x.Percent >= 100)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i>Terminé
                            </span>
                        }
                        else if(x.Percent > 0)
                        {
                            <span class="badge bg-info">
                                <i class="fas fa-spinner me-1"></i>En cours
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="fas fa-clock me-1"></i>Non commencé
                            </span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
        <p class="text-muted">Aucun cours suivi pour le moment.</p>
        <a href="/Courses" class="btn btn-primary">
            <i class="fas fa-book me-2"></i>Découvrir les cours
        </a>
    </div>
}
